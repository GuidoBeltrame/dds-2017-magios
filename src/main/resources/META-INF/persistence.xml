<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="DB_MAGIOS">
		<description>
            Persistence unit for JPA with Hibernate
        </description>

		<class>ar.entidades.Cuenta</class>
		<class>ar.entidades.Indicador</class>
		<class>ar.entidades.Empresa</class>
		<class>ar.entidades.Metodologia</class>
		<class>ar.entidades.Balance</class>
		<class>ar.entidades.Usuario</class>
		<class>ar.entidades.Proceso</class>
		<class>ar.entidades.IndicadorEmpresa</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/dds_magios" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />

			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update" />

		</properties>

	</persistence-unit>

</persistence>
